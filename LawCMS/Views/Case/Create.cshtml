
@{
    ViewBag.Title = "Create";
}

<div class="row clearfix" ng-controller="caseCreateController">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Create Case</h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="wizard_with_validation" method="POST">
                    <h3>Client Information</h3>
                    <fieldset>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" ng-model="Client.Title" class="form-control" name="title" required>
                                <label class="form-label">Title*</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.First_Name" class="form-control" name="username" required>
                                        <label class="form-label">FirstName*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Last_Name" class="form-control" name="username" required>
                                        <label class="form-label">LastName*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="email" class="form-control" ng-model="Client.Email" name="password" id="password" required>
                                        <label class="form-label">Email*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Phone" class="form-control" name="username" required>
                                        <label class="form-label">Phone*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Fax" class="form-control" name="username" required>
                                        <label class="form-label">Fax*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Home_Address" class="form-control" name="username" required>
                                        <label class="form-label">Home Address*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Work_Address" class="form-control" name="username" required>
                                        <label class="form-label">Work Address*</label>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_First_Name" class="form-control" name="username" required>
                                        <label class="form-label">Next Of Kin FirstName*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_Last_Name" class="form-control" name="username" required>
                                        <label class="form-label">Next Of Kin LastName*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_Email" class="form-control" name="username" required>
                                        <label class="form-label">Next Of Kin Email*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_Phone" class="form-control" name="username" required>
                                        <label class="form-label">Next Of Kin Phone*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_Fax" class="form-control" name="username" required>
                                        <label class="form-label">Next Of Kin Fax*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Next_Of_Kin_Address" class="form-control" name="username" required>
                                        <label class="form-label">Address*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Client.Notes" class="form-control" name="username" required>
                                        <label class="form-label">Notes*</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </fieldset>

                    <h3>Case Information</h3>
                    <fieldset>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Case_Title" class="form-control" name="username" required>
                                        <label class="form-label">Title*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="email" class="form-control" ng-model="Case.Attorney_User_Name" name="password" id="password" required>
                                        <label class="form-label">Attorney User*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Clerk_User_Name" class="form-control" name="username" required>
                                        <label class="form-label">Clerk User*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Related_Parties" class="form-control" name="username" required>
                                        <label class="form-label">Related Parties*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Status" class="form-control" name="username" required>
                                        <label class="form-label">Status*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Case_Date" class="form-control" name="username" required>
                                        <label class="form-label">Case Date*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" ng-model="Case.Case_Description" class="form-control" name="username" required>
                                        <label class="form-label">Description*</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <h3>Terms & Conditions - Finish</h3>
                    <fieldset>
                        <input id="acceptTerms-2" name="acceptTerms" type="checkbox" required>
                        <label for="acceptTerms-2">I agree with the Terms and Conditions.</label>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

